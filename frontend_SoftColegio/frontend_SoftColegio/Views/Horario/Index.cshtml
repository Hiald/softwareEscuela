<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">HORARIO</h4>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <!-- end nav-->
                    <div class="tab-content">
                        <div class="tab-pane show active" id="basic-datatable-preview">
                            <table id="tablaHorario" class="table table-striped dt-responsive nowrap w-100">
                                @if (ViewBag.GrolUsuario == 3 &&  ViewBag.GidNivel == 1 && ViewBag.GidGrado == 5)
                                {
                                    <thead>
                                        <tr>
                                            <th>NRO</th>
                                            <th>HORARIO</th>
                                            <th>LUNES</th>
                                            <th>MIERCOLES</th>
                                            <th>VIERNES</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>9:00 AM - 10:00 AM</td>
                                            <td>ARITMÉTICA</td>
                                            <td>AJEDREZ</td>
                                            <td>INGLES</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>10:15 AM - 11:15 AM</td>
                                            <td>INGLES</td>
                                            <td>ÁLGEBRA</td>
                                            <td>GRAMÁTICA</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td>11:30 AM - 12:30 PM</td>
                                            <td>PERCENTIL ORTOGRÁFICO</td>
                                            <td>QUÍMICA</td>
                                            <td>GEOMETRÍA</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td>12:45 PM - 1:30 PM</td>
                                            <td>FÍSICA</td>
                                            <td>PLAN LECTOR</td>
                                            <td>EXPERIMENTOS</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        $('#tablaHorario').DataTable();
    });
</script>
