@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media only screen and (max-width: 600px) {
        #idimg {
            height: 170px !important;
        }

        #idimg2 {
            height: 170px !important;
        }

        #idimg3 {
            height: 170px !important;
        }
    }
</style>
<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="col-12">
                    @*col-lg-7*@
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="page-title" style="font-size:30px;display:inline-block;">HORARIO</h4>
                        </div>
                    </div>
                </div>
                @*<h4 class="page-title" style="font-size:40px">HORARIO</h4>
                    <img src="~/Content/img/horario.png" />*@
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane show active text-center">
                            @if (ViewBag.GrolUsuario == 3)
                            {
                                if (ViewBag.GidGrado == 1)
                                {
                                    <img class="rounded" height="400" src="~/assets/3anios.jpeg" />
                                    <img class="rounded" height="400" src="~/assets/3anios1.png" />
                                    <img class="rounded" height="400" src="~/assets/3anios2.png" />
                                }
                                else if (ViewBag.GidGrado == 2)
                                {
                                    <img class="rounded" height="400" src="~/assets/4anios.jpeg" />
                                    <img class="rounded" height="400" src="~/assets/4anios1.png" />
                                    <img class="rounded" height="400" src="~/assets/4anios2.png" />
                                }
                                else if (ViewBag.GidGrado == 3)
                                {
                                    <img class="rounded" height="400" src="~/assets/5anios.jpeg" />
                                    <img class="rounded" height="400" src="~/assets/5anios1.png" />
                                    <img class="rounded" height="400" src="~/assets/5anios2.png" />
                                }
                                else if (ViewBag.GidGrado == 5)
                                {
                                    <img class="rounded" height="400" src="~/assets/2anios.jpeg" />
                                    <img class="rounded" height="400" src="~/assets/2anios1.png" />
                                    <img class="rounded" height="400" src="~/assets/2anios2.png" />
                                }

                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-md-12 col-lg-12">
                                        <select class="form-control" id="idGrado">
                                            <option value="0">Seleccione una opción</option>
                                            <option value="5">2 Años</option>
                                            <option value="1">3 Años</option>
                                            <option value="2">4 Años</option>
                                            <option value="3">5 Años</option>
                                        </select>
                                    </div>
                                    <br />
                                </div>
                                <div class="row" id="divimg">
                                    <br />
                                    <div class="col-md-12 col-lg-12 text-center">
                                        <img id="idimg" class="rounded" height="400" src="" />
                                        <img id="idimg2" class="rounded" height="400" src="" />
                                        <img id="idimg3" class="rounded" height="400" src="" />
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#tablaHorario').DataTable();
            $('#divimg').css("display", "none");
            $('#idGrado').change(function () {
                var idgrado = $('#idGrado').val();
                if (idgrado != "0") {

                    if (idgrado == "1") {
                        $('#idimg').attr("src", "/assets/3anios.jpeg");
                        $('#idimg2').attr("src", "/assets/3anios1.png");
                        $('#idimg3').attr("src", "/assets/3anios2.png");
                    } else if (idgrado == "2") {
                        $('#idimg').attr("src", "/assets/4anios.jpeg");
                        $('#idimg2').attr("src", "/assets/4anios1.png");
                        $('#idimg3').attr("src", "/assets/4anios2.png");
                    } else if (idgrado == "3") {
                        $('#idimg').attr("src", "/assets/5anios.jpeg");
                        $('#idimg2').attr("src", "/assets/5anios1.png");
                        $('#idimg3').attr("src", "/assets/5anios2.png");
                    } else if (idgrado == "5") {
                        $('#idimg').attr("src", "/assets/2anios.jpeg");
                        $('#idimg2').attr("src", "/assets/2anios1.png");
                        $('#idimg3').attr("src", "/assets/2anios2.png");
                    }

                    $('#divimg').css("display", "block");
                } else {
                    $('#divimg').css("display", "none");
                }
            });
        });


    </script>
}

