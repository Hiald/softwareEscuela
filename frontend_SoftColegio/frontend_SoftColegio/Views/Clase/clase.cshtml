<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                </div>
                <h4 class="page-title">CLASES</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">@ViewBag.Curso</h4>
                    <ul class="nav nav-tabs nav-bordered mb-3">
                        <li class="nav-item">

                        </li>
                        <li class="nav-item">

                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane show active" id="links-buttons-preview">
                            <div class="list-group">
                                @foreach (var @item in ViewBag.Lista)
                                {
                                    <a onclick="rutaClase('@item.Srutaenlace.ToString()')" data-toggle="modal"  data-target="#modalClase" class="list-group-item list-group-item-action">@item.Snombre</a>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" value="" id="Rutaenlace"/>

<div id="modalClase" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body p-4">
                <div class="text-center">
                    <i class="dripicons-information h1 text-info"></i>
                    <h4 class="mt-2">¿Qué deseas realizar?</h4>
                    @*<p class="mt-3">Cras mattis consectetur purus sit amet fermentum. Cras justo odio, dapibus ac facilisis in, egestas eget quam.</p>*@
                    <button type="button" onclick="Iraclase()" class="btn btn-info my-2" data-dismiss="modal">Ir a la clase</button>
                    <button type="button" class="btn btn-light my-2" data-dismiss="modal">Ir a tarea</button>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>

    function rutaClase(rutaEnlace) {
        //Me envia al modal
        $("#Rutaenlace").val(rutaEnlace);
    }

    function Iraclase() {
        var UrlRutaEnlace = $("#Rutaenlace").val();
        window.open(UrlRutaEnlace, '_blank');
    }

</script>