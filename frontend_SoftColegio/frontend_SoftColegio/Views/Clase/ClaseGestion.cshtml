<input type="hidden" value="@ViewBag.GIDUsuario" id="hddidusuario" />
<input type="hidden" value="@ViewBag.GrolUsuario" id="hddtipousuario" />
@section scripts{
    <script src="~/assets/js/moment.js"></script>
    <script>
        var GvalorIdCurso = 0;
        $('#txtfechaini').val(moment().format("YYYY-MM-DD"));
        $('#txtfechafin').val(moment().format("YYYY-MM-DD"));

        function fn_ListarGradoAgregar() {
            var dtipousuario = $('#hddtipousuario').val();
            var idusuarioparam = $('#hddidusuario').val();
            $('#idGrado').find('option').remove();
            $.ajax({
                type: "POST",
                url: "/curso/ListarGrado",
                data: {
                    "widnivel": parseInt(1),
                },
                success: function (data) {
                    if (data.aaData === "") {
                        alert("¡No hay grados, intenta agregar algunos!");
                    }
                    $('#idGrado').append($("<option></option>")
                        .attr("value", "0")
                        .text("Seleccione una opción"));
                    $.each(data.aaData, function (index, value) {
                        $('#idGrado').append($("<option></option>")
                            .attr("value", value.idgrado)
                            .text(value.SnombreGrado));
                    });

                },
                error: function (data) {
                    console.log(data);
                }
            });

        }

        function fn_ListarCursoAgregar() {
            var slcgradog = $('#idGrado option:selected').attr('value');

            var dtipousuario = $('#hddtipousuario').val();
            var idusuarioparam = $('#hddidusuario').val();
            if (dtipousuario == 1) {
                idusuarioparam = 0;

                $('#idCurso').find('option').remove();
                $.ajax({
                    type: "POST",
                    url: "/clase/ListarClaseGestion",
                    data: {
                        "idgrado": parseInt(slcgradog),
                        "idnivel": parseInt(1)
                    },
                    success: function (data) {
                        if (data.data === "") {
                            alert("¡No hay datos, ¡intenta agregar algunos!");
                        }
                        $('#idCurso').append($("<option></option>")
                            .attr("value", "0")
                            .text("Seleccione una opción"));
                        $.each(data, function (index, value) {
                            $('#idCurso').append($("<option></option>")
                                .attr("value", value.idcurso)
                                .text(value.Snombre));
                        });
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });

            } else {
                var igradovalor = $('#idGrado option:selected').attr('value');
                $('#idCurso').find('option').remove();
                $.ajax({
                    type: "POST",
                    url: "/curso/ListarCursoGestion",
                    data: {
                        "valoritipousuario": 4,
                        "widusuario": idusuarioparam,
                        "idnivel": 1,
                        "idgrado": igradovalor,
                        "idcurso": 0
                    },
                    success: function (data) {
                        if (data.aaData === "") {
                            alert("¡No hay datos, ¡intenta agregar algunos!");
                        }
                        $('#idCurso').append($("<option></option>")
                            .attr("value", "0")
                            .text("Seleccione una opción"));
                        $.each(data.aaData, function (index, value) {
                            $('#idCurso').append($("<option></option>")
                                .attr("value", value.idcurso)
                                .text(value.SnombreCurso));
                        });
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });
            }

        }

        function fn_ListarGrado() {
            var dtipousuario = $('#hddtipousuario').val();
            var idusuarioparam = $('#hddidusuario').val();
            $('#idGradog').find('option').remove();
            $.ajax({
                type: "POST",
                url: "/curso/ListarGrado",
                data: {
                    "widnivel": parseInt(1),
                },
                success: function (data) {
                    if (data.aaData === "") {
                        alert("¡No hay grados, intenta agregar algunos!");
                    }
                    $('#idGradog').append($("<option></option>")
                        .attr("value", "")
                        .text("Seleccione una opción"));
                    $.each(data.aaData, function (index, value) {
                        $('#idGradog').append($("<option></option>")
                            .attr("value", value.idgrado)
                            .text(value.SnombreGrado));
                    });

                },
                error: function (data) {
                    console.log(data);
                }
            });

        }

        function fn_ListarCurso() {
            var slcgradog = $('#idGradog option:selected').attr('value');

            var dtipousuario = $('#hddtipousuario').val();
            var idusuarioparam = $('#hddidusuario').val();
            if (dtipousuario == 1) {
                idusuarioparam = 0;

                $('#idCursog').find('option').remove();
                $.ajax({
                    type: "POST",
                    url: "/clase/ListarClaseGestion",
                    data: {
                        "idgrado": parseInt(slcgradog),
                        "idnivel": parseInt(1)
                    },
                    success: function (data) {
                        if (data.data === "") {
                            alert("¡No hay datos, ¡intenta agregar algunos!");
                        }
                        $('#idCursog').append($("<option></option>")
                            .attr("value", "0")
                            .text("Seleccione una opción"));
                        $.each(data, function (index, value) {
                            $('#idCursog').append($("<option></option>")
                                .attr("value", value.idcurso)
                                .text(value.Snombre));
                        });
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });

            } else {
                var igradovalor = $('#idGradog option:selected').attr('value');
                $('#idCursog').find('option').remove();
                $.ajax({
                    type: "POST",
                    url: "/curso/ListarCursoGestion",
                    data: {
                        "valoritipousuario": 4,
                        "widusuario": idusuarioparam,
                        "idnivel": 1,
                        "idgrado": igradovalor,
                        "idcurso": 0
                    },
                    success: function (data) {
                        if (data.aaData === "") {
                            alert("¡No hay datos, intenta agregar una!");
                        }
                        $('#idCursog').append($("<option></option>")
                            .attr("value", "")
                            .text("Seleccione una opción"));
                        $.each(data.aaData, function (index, value) {
                            $('#idCursog').append($("<option></option>")
                                .attr("value", value.idcurso)
                                .text(value.SnombreCurso));
                        });
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });
            }
        }

        function fn_listartabla(param_valor) {
            $('#tblClase').DataTable(
                {
                    "ajax": {
                        "url": "/Clase/ListarClaseGeneral",
                        "type": "POST",
                        "datatype": "json",
                        "data": { "idcurso": param_valor }
                    },
                    //"bServerSide": true,
                    "bProcessing": true,
                    "bDestroy": true,
                    "language": {
                        "info": "",
                        "infoEmpty": "",
                        "infoFiltered": "",
                        "emptyTable": "No se encontraron registros",
                        "sZeroRecords": "No se encontraron registros.",
                        "processing": "Cargando. Por favor espere...",
                        "oPaginate": {
                            "sFirst": "Primero",
                            "sLast": "Último",
                            "sNext": "Siguiente",
                            "sPrevious": "Anterior"
                        },
                        "sSearch": "Buscar:"
                    },
                    "columns": [
                        { "data": "Snombre", "width": "70%" },
                        { "width": "10%" },
                        { "width": "10%" },
                        { "width": "10%" }
                    ],
                    "aoColumnDefs":
                        [
                            {
                                "mRender": function (data, type, row) {
                                    var strHtml = "<button class='btn btn-danger' onclick='fn_Eliminar()' data-cat=\"" + row.idclase + "|" + "\" id='AcessEliminar' >Eliminar</button>";
                                    return strHtml;
                                },
                                "sWidth": "5px",
                                "sClass": "css-center",
                                "bSort": false,
                                "aTargets": [1]
                            },
                            {
                                "mRender": function (data, type, row) {
                                    var strHtml = "<button class='btn btn-info' onclick='fnAgregarClase(" + row.idclase + ")' data-delet=\"" + row.idclase + "\" id='AccessEliminar' >Agregar tarea</button>";
                                    return strHtml;
                                },
                                "sWidth": "5px",
                                "sClass": "css-center",
                                "bSort": false,
                                "aTargets": [2]
                            },
                            {
                                "mRender": function (data, type, row) {
                                    var strHtml = "<button class='btn btn-warning' onclick='fnEditarClase(" +
                                        row.idclase + ", " +
                                        row.idcurso + ", " +
                                        row.Isemana + ", " +
                                        "\"" + encodeURIComponent(row.Snombre) + "\"" + ", " +
                                        "\"" + encodeURIComponent(row.Sdescripcion) + "\"" + ", " +
                                        "\"" + encodeURIComponent(row.Srutaenlace) + "\"" + ", " +
                                        "\"" + encodeURIComponent(row.SrutaVideo) + "\"" + ", " +
                                        "\"" + encodeURIComponent(row.SimagenRuta) + "\"" + ", " +
                                        ")' style='color: #fff !important;'>Modificar Clase</button>";
                                    return strHtml;
                                },
                                "sWidth": "5px",
                                "sClass": "css-center",
                                "bSort": false,
                                "aTargets": [3]
                            }
                        ]
                });
        }

        $(document).ready(function () {
            fn_ListarGrado();
            fn_ListarGradoAgregar();
            if ($('#hddtipousuario').val() == 2) {
                $('#idCursog').on('change', function () {
                    var GDocenteIdCurso = parseInt($('#idCursog option:selected').attr('value'));
                    if (GDocenteIdCurso == 0) {
                        return;
                    }
                    fn_listartabla(GDocenteIdCurso);
                });

            } else {
                $('#idCursog').on('change', function () {
                    GvalorIdCurso = parseInt($('#idCursog option:selected').attr('value'));
                    if (GvalorIdCurso == 0) {
                        return;
                    }
                    fn_listartabla(GvalorIdCurso);
                });
            }


            $('#idGrado').on('change', function () {
                fn_ListarCursoAgregar();
            });

            $('#idGradog').on('change', function () {
                fn_ListarCurso();
            });



        });

        var idClase = 0;
        //agrega tarea
        function fnAgregarClase(idclasem) {
            idClase = parseInt(idclasem);
            $('#hddidclase').val(idClase);
            $("#modalArchivo").modal("show");
        }

        function fn_Eliminar() {
            $('body').on("click", "#AcessEliminar", function () {
                var id_clase = $(this).attr("data-cat");
                var ArrayClase = id_clase.split("|");
                //alert(ArrayClase[0]);
                $('#hddclaseEliminar').attr("data-idclaseEliminar", ArrayClase[0]);
                $('#modalEliminarClase').modal("show");
            });
        }

        function fn_ConfimarEliminar() {
            var idclase = $('#hddclaseEliminar').attr("data-idclaseEliminar");
            $.ajax({
                type: "POST",
                url: "/Clase/EliminarClaseGestion",
                //contentType: "application/json; charset=utf-8",
                data: {
                    "widclase": idclase
                },
                //dataType: "json",
                //async: true,
                success: function (data) {
                    NotificacionSuccessDerecha("Clase eliminada");
                    $('#modalEliminarClase').modal("hide");
                    GvalorIdCurso = parseInt($('#idCursog option:selected').attr('value'));
                    fn_listartabla(GvalorIdCurso);
                },
                error: function (data) {
                    console.log(data);
                }
            });
