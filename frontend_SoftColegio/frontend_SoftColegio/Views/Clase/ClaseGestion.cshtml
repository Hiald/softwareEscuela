@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Contenido</a></li>
                        <li class="breadcrumb-item active">Gestion clases</li>
                    </ol>
                </div>
                <h4 class="page-title">MÓDULO CLASE</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted font-14">
                        <button type="button" class="btn btn-success btn-rounded mb-3" data-toggle="modal" data-target="#modalClase">
                            <i class="mdi mdi-plus"></i>Agregar Clase
                        </button>
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idGradog">Grado</label>
                                <select class="form-control" id="idGradog"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idCursog">Curso</label>
                                <select class="form-control" id="idCursog"></select>
                            </div>
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane show active" id="basic-datatable-preview">
                            <table id="tblClase" class="table dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th width="70%">Nombre</th>
                                        <th width="10%"></th>
                                        <th width="10%"></th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- MODAL -->
    <div id="modalClase" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dark-header-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-success">
                    <h4 class="modal-title" id="dark-header-modalLabel">CLASE</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idGrado">Grado</label>
                                <select class="form-control" id="idGrado"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idCurso">Curso</label>
                                <select class="form-control" id="idCurso"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">Nombre de la clase</label>
                                <input type="text" id="txtNombre" class="form-control" placeholder="Clase">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idSemana">Número de semana</label>
                                <select class="form-control" id="idSemana">
                                    <option value="0">Seleccionar</option>
                                    <option value="1">Semana 1</option>
                                    <option value="2">Semana 2</option>
                                    <option value="3">Semana 3</option>
                                    <option value="4">Semana 4</option>
                                    <option value="5">Semana 5</option>
                                    <option value="6">Semana 6</option>
                                    <option value="7">Semana 7</option>
                                    <option value="8">Semana 8</option>
                                    <option value="9">Semana 9</option>
                                    <option value="10">Semana 10</option>
                                    <option value="11">Semana 11</option>
                                    <option value="12">Semana 12</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="example-textarea">Descripcion clase</label>
                                <textarea class="form-control" id="txtDescripcion" placeholder="Descripción..." rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">Enlace de la Clase</label>
                                <input type="text" id="txtRutaEnlace" class="form-control" maxlength="100" placeholder="Ruta enlace...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="simpleinput">Ruta video</label>
                                <input type="text" id="txtRutaVideo" class="form-control" maxlength="100" placeholder="Ruta video...">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-rounded mb-3" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success btn-rounded mb-3" id="btnGuardar"><i class="mdi mdi-plus"></i>Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!--MODAL AGREGAR ARCHIVO-->
    <div id="modalArchivo" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dark-header-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-success">
                    <h4 class="modal-title" id="dark-header-modalLabel">Tarea</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" name="idgrado" value="" id="hddidclase" />
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtNombreArc">Nombre</label>
                                <input type="text" name="nombre" id="txtNombreArc" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-6" style="display:none;">
                            <input class="form-control" name="itipoarchivo" value="1" id="txttipoarchivo">
                        </div>

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtvideo">Archivo de la tarea</label>
                                <input type="file" id="txtvideo" name="FRutaArchivo" class="form-control"
                                       accept="application/msword, application/vnd.ms-powerpoint, text/plain
                                                , application/pdf, image/*, application/vnd.openxmlformats-officedocument.wordprocessingml.document,
                                                 application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtfechaini">Fecha Inicio</label>
                                <input type="date" name="fechaini" id="txtfechaini" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtfechafin">Fecha Fin</label>
                                <input type="date" name="fechafin" id="txtfechafin" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="txtenlace">Enlace de la tarea</label>
                                <input type="text" maxlength="100" name="rutaenlace" id="txtenlace" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="txtdescripcion">Descripción</label>
                                <textarea class="form-control" name="descripcion" id="txtdescripcion" placeholder="Descripción..." rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-rounded mb-3" data-dismiss="modal">Cerrar</button>
                    <button onclick="fnAgregarTarea();" class="btn btn-success btn-rounded mb-3"><i class="mdi mdi-plus"></i>Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL ACTUALIZAR CLASE -->
    <div id="modalActualizarClase" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="dark-header-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-success">
                    <h4 class="modal-title" id="dark-header-modalLabel">ACTUALIZAR CLASE</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <input type="hidden" id="hddidclase" value="" />
                        <input type="hidden" id="hddidcurso" value="" />
                        <input type="hidden" id="hddsemana" value="" />

                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtNombreEditar">Nombre de la clase</label>
                                <input type="text" id="txtNombreEditar" class="form-control" placeholder="Clase">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="idSemanaEditar">Número de semana</label>
                                <input disabled type="text" class="form-control" id="idSemanaEditar" value="" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <label for="txtDescripcionEditar">Descripcion clase</label>
                                <textarea class="form-control" id="txtDescripcionEditar" placeholder="Descripción..." rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtRutaEnlaceEditar">Enlace de la Clase</label>
                                <input type="text" id="txtRutaEnlaceEditar" class="form-control" maxlength="100" placeholder="Ruta enlace...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="txtRutaVideoEditar">Ruta video</label>
                                <input type="text" id="txtRutaVideoEditar" class="form-control" maxlength="100" placeholder="Ruta video...">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-rounded mb-3" data-dismiss="modal">Cerrar</button>
                    <button type="button" onclick="fnActualizarClase();" class="btn btn-success btn-rounded mb-3" id="btnActualizarClase">
                        <i class="mdi mdi-plus"></i>Actualizar
                    </button>
                </div>
            </div>
        </div>
    </div>

</div>

