<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="col-12">
                    @*col-lg-7*@
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="page-title" style="font-size:40px;display:inline-block;">CALIFICACIONES</h4>
                            <img src="~/Content/img/calificacion.png" height="90" />

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <p class="text-muted font-14" >
                        <label for="idSemana">Semana</label>
                        <select class="form-control" id="idSemana" style="border-style:solid; border-color:black;">
                            <option>Seleccionar</option>
                            <option value="1">Semana 1</option>
                            <option value="2">Semana 2</option>
                            <option value="3">Semana 3</option>
                            <option value="4">Semana 4</option>
                            <option value="5">Semana 5</option>
                            <option value="6">Semana 6</option>
                            <option value="7">Semana 7</option>
                        </select>
                    </p>
                    <!-- end nav-->
                    <div class="tab-content">
                        <div class="tab-pane show active" id="basic-datatable-preview">
                            <table style="border-style:solid; border-color:black;" id="tblCalificacion" class="table table-striped dt-responsive nowrap w-100">
                                <thead>
                                    <tr>
                                        <th>CURSO</th>
                                        <th>NOTA</th>
                                        <th>OBSERVACIÓN</th>
                                        <th>SEMANA</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var isemana = 0;
        $(document).ready(function () {           

            $('#idSemana').on('change', function () {
                isemana = parseInt($('#idSemana option:selected').attr('value'));
                listarCalificacion(isemana);
            });
        });
    });


    function listarCalificacion(isemana) {
        $('#tblCalificacion').DataTable
            ({
                "ajax": {
                    "url": "/Calificacion/ListarCalificacionGestion",
                    "type": "POST",
                    "datatype": "json",
                    "data": {
                        "tiponota": 2,
                        "idnota": 0,
                        "isemana": isemana,
                    }
                },
                //"bServerSide": true,
                "bDestroy": true,
                "bProcessing": true,
                "language": {
                    "info": "",
                    "infoEmpty": "",
                    "infoFiltered": "",
                    "emptyTable": "No se encontraron registros",
                    "sZeroRecords": "No se encontraron registros.",
                    "processing": "Cargando. Por favor espere...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "Último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "sSearch": "Buscar:"
                },
                "columns": [
                    { "data": "Snombrecurso" },
                    { "data": "Inota" },
                    { "data": "Sobservacion" },
                    { "data": "isemana" }
                ]
            });
    }

</script>
